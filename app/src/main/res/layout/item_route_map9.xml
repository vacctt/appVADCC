<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/siu"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="Recorrido: "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/idRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/siu"
            android:singleLine="true"
            android:text="Id"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/DateRoute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/idRoute"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            android:text="Fecha de viaje" />

        <TextView
            android:id="@+id/TimeRoute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/idRoute"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/siu"
            android:gravity="left"
            android:text="Hora de viaje" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>